<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="规则详情"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"
            android:gravity="center" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="名称:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="类型:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 规则类型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="规则类型:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_rule_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 描述 -->
            <LinearLayout
                android:id="@+id/row_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="描述:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 正则表达式 -->
            <LinearLayout
                android:id="@+id/row_pattern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="正则表达式:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_pattern"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

            <!-- 取件码前缀和后缀 -->
            <LinearLayout
                android:id="@+id/row_code_prefix_suffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="取件码:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_code_prefix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/rule_detail_code_suffix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- 站点前缀和后缀 -->
            <LinearLayout
                android:id="@+id/row_station_prefix_suffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="站点:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_station_prefix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/rule_detail_station_suffix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- 地址前缀和后缀 -->
            <LinearLayout
                android:id="@+id/row_address_prefix_suffix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_address_prefix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/rule_detail_address_suffix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textIsSelectable="true"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- 启用状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="启用状态:"
                    android:textSize="12sp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:paddingEnd="6dp" />

                <TextView
                    android:id="@+id/rule_detail_enabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/view_text_background" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="关闭"
            android:textSize="12sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>